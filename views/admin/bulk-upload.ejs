        <form id="bulk-upload-form" method="POST" action="/products/bulk-upload">
            <div class="form-label-div" id="bulk-upload-form-div">
                <label for="json-file-input">Select a file:</label>
                <input type="file" id="json-file-input" name="Upload" accept=".json">
                <textarea id="json-textarea" name="jsonData" style="visibility:hidden; height:0;"></textarea>
            </div>
            <button type="submit" id="bulk-upload-form-btn">Upload</button>
        </form>

